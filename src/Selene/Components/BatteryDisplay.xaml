<UserControl x:Class="Selene.Components.BatteryDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Selene.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <Button x:Name="ControlButton" Style="{DynamicResource ComponentButton}" Click="Button_Click">
        <StackPanel>
            <TextBlock x:Name="BatteryIcon" Style="{DynamicResource MDL2Symbol}"/>
            <Separator/>
            <TextBlock x:Name="BatteryLevelText"/>
        </StackPanel>
    </Button>
</UserControl>
