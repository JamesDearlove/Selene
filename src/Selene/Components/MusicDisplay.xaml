<UserControl x:Class="Selene.Components.MusicDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Button x:Name="MainButton" Style="{DynamicResource ComponentButton}" Click="Button_Click">
        <StackPanel>
            <TextBlock x:Name="MusicStatus" Style="{DynamicResource MDL2Symbol}">&#xEC4F;</TextBlock>
            <Separator/>
            <TextBlock x:Name="MusicPlaying" MaxWidth="380" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"></TextBlock>
        </StackPanel>
    </Button>
</UserControl>
