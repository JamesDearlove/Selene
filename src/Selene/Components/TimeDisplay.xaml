<UserControl x:Class="Selene.Components.TimeDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Selene.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200" Unloaded="UserControl_Unloaded">
    <Button x:Name="ComponentButton" Style="{DynamicResource ComponentButton}" Click="Button_Click">
        <StackPanel>
            <TextBlock Style="{DynamicResource MDL2Symbol}">&#xE121;</TextBlock>
            <Separator/>
            <TextBlock x:Name="CurrentTimeText"></TextBlock>
        </StackPanel>
    </Button>
</UserControl>
