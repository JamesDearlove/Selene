<control:FlyoutWindow x:Class="Selene.Flyouts.PowerInfoFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:control="clr-namespace:Selene.Controls;assembly=Selene.Controls"
        xmlns:local="clr-namespace:Selene.Flyouts"
        mc:Ignorable="d"
        Title="PowerInfoFlyout" Height="100" Width="200">
    <Grid Margin="5">
        <TextBlock x:Name="BatteryTimeText" Foreground="{DynamicResource TextColor}" Style="{DynamicResource BodyTextStyle}" TextWrapping="WrapWithOverflow" VerticalAlignment="Top">12 hours 20 minutes remaining</TextBlock>

        <StackPanel VerticalAlignment="Bottom">
            <TextBlock x:Name="BatterySettingsLink" Style="{DynamicResource LinkTextStyle}" FontSize="14" HorizontalAlignment="Left" MouseUp="BatterySettingsLink_MouseUp">Battery Settings</TextBlock>
            <TextBlock x:Name="BatteryUsageLink" Style="{DynamicResource LinkTextStyle}" FontSize="14" HorizontalAlignment="Left" MouseUp="BatteryUsageLink_MouseUp">Battery Usage</TextBlock>
        </StackPanel>
    </Grid>
</control:FlyoutWindow>
