<control:FlyoutWindow x:Class="Selene.Flyouts.LauncherFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Selene.Flyouts"
        xmlns:control="clr-namespace:Selene.Controls;assembly=Selene.Controls"
        mc:Ignorable="d"
        Height="40"
        Width="120">

    <StackPanel>
        <Button Click="SettingsButton_Click" Height="40" Style="{DynamicResource ComponentButtonBase}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,10,0" Style="{DynamicResource MDL2Symbol}">&#xE713;</TextBlock>
                <Separator/>
                <TextBlock FontSize="16">Settings</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</control:FlyoutWindow>
